<body class = 'center'>
  <h1><span class = 'glyphicon glyphicon-credit-card'></span> クレジットカード登録画面</h1>
  <%= form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do %>
    <label>Card No</label>
    <%= text_field_tag "number", "", class: "number", placeholder: "カード番号を入力" ,maxlength: "16", type: "text", id: "card_number" %>
    <br/>
    <label>expired at</label>
    <select id="exp_month" name="exp_month" type="text">
      <option>--</option>
      <option value="1">01</option>
      <option value="2">02</option>
      <option value="3">03</option>
      <option value="4">04</option>
      <option value="5">05</option>
      <option value="6">06</option>
      <option value="7">07</option>
      <option value="8">08</option>
      <option value="9">09</option>
      <option value="10">10</option>
      <option value="11">11</option>
      <option value="12">12</option>
    </select>
    <span>Month/</span>
    <select id="exp_year" name="exp_year" type="text">
      <option>--</option>
      <option value="2019">19</option>
      <option value="2020">20</option>
      <option value="2021">21</option>
      <option value="2022">22</option>
      <option value="2023">23</option>
      <option value="2024">24</option>
      <option value="2025">25</option>
      <option value="2026">26</option>
      <option value="2027">27</option>
      <option value="2028">28</option>
      <option value="2029">29</option>
    </select>
    <span>Year</span>
    <br/>
    <label>Security Code</label>
    <%= text_field_tag "cvc", "", class: "cvc", placeholder: "CVC", maxlength: "4", id: "cvc" %>
    <div id="card_token"></div>
    <%= submit_tag "登録する", id: "token_submit",class: 'btn btn-info btn-sm margin_top' %>
  <% end %>
</body>  
