<h1>入金後画面</h1>
<h4>入力後に管理者へご入金報告メールが送られます。</h4>
<%= form_with(model: @payment, local: true, url: confirm_payments_path)do |f| %>

  <div class='form'>
    <%= f.label :amount,'金額' %>
    <%= f.select :amount, Payment.amounts.keys, {}, class: "select-default" %>
  </div>

  <div class="form">
    <%= f.label :month, '入金日' %>
    <%= f.date_select(
        :month,
        start_year: Time.now.year,
        end_year: (Time.now.year + 2)) %>
  </div>

  <div class='form'>
    <%= f.label :method,'金額' %>
    <%= f.select :method, Payment.methods.keys, {}, class: "select-default" %>
  </div>

  <%= f.submit '登録',class:'btn btn-primary btn-block' %>

<% end %>