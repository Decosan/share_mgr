<h1 class='grid_header'>
  <span class='glyphicon glyphicon-refresh'><%= @routine.title %></span>
  <span class='glyphicon glyphicon-ok-sign'>内容：<%= @routine.condition %></span>
  <span><%= link_to 'タスク一覧へ', routines_path,class:'btn btn-primary btn-lg' %></span>
</h1>

<%= month_calendar events: @assignments.where(routine_id: @routine.id) do |date,assignments| %>
  <%= date %>
  <% assignments.each do |assign| %>
    <div style='color: red;'>
      <%= assign.user.name %> (<%= assign.user.personnel.room %>号室)
    </div>
  <% end %> 
<% end %>

<p class='margin'><a class="btn btn-info btn-block" href="/routines/<%= @routine.id %>/assignments/new" role="button">新規アサイン</a></p>

<ul class="media-list">
  <% @assignments.where(routine_id: @routine.id).each do |assignment| %>
    <li class="media grid_media">
      <h4 class="media-left">
      <span class='glyphicon glyphicon-refresh'></span>
      </h4>
      
      <div class="media-body">
        <h4 class="media-heading"><span class='glyphicon glyphicon-hand-right'></span> アサイン: <%= assignment.user.name %> (<%= assignment.user.personnel.room %>号室)</h4>
        Date: <%= assignment.start_time %>
      </div>
      <div>
        <a class="btn btn-warning btn-md" href="/routines/<%= @routine.id %>/assignments/<%= assignment.id %>/edit" role="button">変更する</a>
      </div>
      <div>
        <a class="btn btn-danger btn-md" href="/routines/<%= @routine.id %>/assignments/<%= assignment.id %>" role="button" data-method="delete">取り消す</a>
      </div>
      
    </li>
  <% end %>  
</ul>