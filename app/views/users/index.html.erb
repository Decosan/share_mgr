<h1>Users Index</h1>
<ul class="media-list">
  <% @users.each do |user| %>
    <% if user.id != current_user.id %>
      <li class="media">
          <h4 class="media-left">
            <% if user.avatar.attached? %>
            <%= image_tag user.avatar.variant(resize: "80x50"), style:'border-radius: 20%;' %>
          <% else %>
            <span class="label label-info">No Image</span>  
          <% end %>
          <%= user.name %>
          </h4>
          <div class="media-body">
            <h4 class="media-heading">Name:<%= user.name %> (<%= user.personnel.room %>号室)</h4>
            Registered: <%= user.created_at.strftime('%Y/%m/%d') %> 
            
              <div class="item">
                <%= link_to 'イベントを見る', user %> | 
                <%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
              </div>
              
          </div>
          <% if current_user.admin? %>
            <% if User.where(admin: true).pluck(:user_id).include?(user.id) %>
              <%= button_to '管理者権限を与える', users_path, params: {admin: 'true'}, method: :post %>
            <% else %>
              <%= button_to '管理者権限を剥奪', users_path, params: {no_admin: 'true'}, method: :post %>
            <% end %>  
          <% end %>
      </li>
    <% end %>
  <% end %>  
</ul>