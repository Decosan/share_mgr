<div class = 'money'>
  <div class = 'container center_field centering'>
    <h2> 支払いを確定しますか？</h2>
    <div>
      <p class = 'inline'>
        <% unless @card_payment.month.nil? %>
          <% unless @card_payment.month.month.to_i == 12 %>
            <%= @card_payment.month.month.to_i + 1 %>月分
          <% else %> 
            1月分
          <% end %>  
        <% end %>
      </p>
      <p class = 'inline'>  /  <%= @card_payment.amount %>円</p>
    </div>
    </br>
    <h3>支払い方法: クレジットカード</h3>
    <% if @default_card_information.blank? %>
      <br/>
    <% else %>
      <%= "**** **** **** " + @default_card_information.last4 %>
      <% exp_month = @default_card_information.exp_month.to_s %>
      <% exp_year = @default_card_information.exp_year.to_s.slice(2,3) %>
      <%= exp_month + " / " + exp_year %>
    <% end %>
    <br/>
    <%= form_tag(action: :pay, method: :post) do %>
      <button class = 'btn btn-success btn-block margin_top'>支払いを確定する</button>
    <% end %>
    
  </div>  
</div>  